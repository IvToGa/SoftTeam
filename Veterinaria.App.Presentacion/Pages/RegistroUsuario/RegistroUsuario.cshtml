@page
@model Veterinaria.App.Pages.RegistroUsuarioModel
@{
}

<h1>
    <figure class="text-center">
        Bienvenido a Clinica Veterinaria SoftTeam
    </figure>
</h1>

<div id="accordion">
    <div class="card">
        <div class="card-header" id="headingOne">
            <h5 class="mb-0">
                <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true"
                    aria-controls="collapseOne">
                    Ingresa tus datos por favor
                </button>
            </h5>
        </div>

        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
            <div class="card-body">
                <form>

                    <div class="container">
                        <div class="row">
                            <div class="col">

                                <div class="form-group row">
                                    <label for="Nombre" class="col-sm-4 col-form-label">Nombres</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Nombres" required>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="Cedula" class="col-sm-4 col-form-label">Cedula</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Cedula" required>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="Edad" class="col-sm-4 col-form-label">Edad</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Edad" required> 
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="Clave" class="col-sm-4 col-form-label">Clave</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" placeholder="********" required>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="NombreMascota" class="col-sm-10 col-form-label">Nombre de tu
                                        Mascota</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Ej. Pelusa" required>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="EdadMascota" class="col-sm-4 col-form-label">Edad de tu mascota</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Edad" required>
                                    </div>
                                </div>

                            </div>

                            <div class="col">

                                <div class="form-group row">
                                    <label for="Apellidos" class="col-sm-4 col-form-label">Apellidos</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Apellidos" required>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="Telefono" class="col-sm-4 col-form-label">Telefono</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Telefono" required>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="inputEmail" class="col-sm-4 col-form-label">Correo</label>
                                    <div class="col-sm-10">
                                        <input type="email" class="form-control" placeholder="example@mail.com" required>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="CantMascotas" class="col-sm-10 col-form-label">Cantidad de
                                        Mascotas</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="1, 2, 5..." required>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="Raza" class="col-sm-4 col-form-label">Raza</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Gatico, Perro..." required>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="FechNacMascota" class="col-sm-10 col-form-label">Fecha de Nacimiento de
                                        tu Mascota</label>
                                    <div class="col-sm-10">
                                        <input type="date" class="form-control" placeholder="dd/mm/aaaa" required>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Registrarse</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>

</div>
